<footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $$(document).ready(function () {
            const data = $$("#data")

            function load() {
                temp_a4 = $$('<div class="A4"></div>')
                data.after(temp_a4)
                content_height = 0
                h56 = 0
                const content_area = $$(temp_a4).height()
                elements = data.children();
                for (i = 0; i < elements.length; i++) {
                    new_element = $$(elements[i]).clone()
                    temp_a4.append(new_element)
                    if ($$(new_element).is("h5,h6")) {
                        h56++
                    }
                    if (h56 !== 2) {
                        content_height += $$(new_element).outerHeight(true)
                    } else {
                        h56 = 0
                    }
                    bottom_margin = parseFloat($$(elements[i])) ? parseFloat($$(elements[i])) : 0
                    if ($$(elements[i]).hasClass("page-break") ||
                        content_height - bottom_margin > content_area
                    ) {
                        if ($$(new_element).is("ul,ol")) {
                            content_height -= $$(new_element).outerHeight(true)
                            temp_a4.children().last().remove()
                            lis = new_element.children()
                            j = 0
                            tag = $$(new_element).prop("tagName")
                            new_list = $$(`<$${tag}></$${tag}>`)
                            temp_a4.append(new_list)
                            while (j < lis.length) {
                                new_list.append(lis[j])
                                content_height += $$(lis[j]).outerHeight(true)
                                bottom_margin = parseFloat(lis[j]) ? parseFloat(lis[j]) : 0
                                if (content_height - bottom_margin > content_area) {
                                    new_list.children().last().remove()
                                    temp_a4_t = $$('<div class="A4"></div>')
                                    temp_a4.after(temp_a4_t)
                                    temp_a4 = temp_a4_t
                                    temp_a4.append($$('<div class="page-break"></div>'))
                                    content_height = 0
                                    j--
                                    new_list = $$(`<$${tag}></$${tag}>`)
                                    temp_a4.append(new_list)
                                }
                                j++
                            }
                        } else {
                            temp_a4_t = $$('<div class="A4"></div>')
                            temp_a4.after(temp_a4_t)
                            temp_a4 = temp_a4_t
                            if (!$$(elements[i]).hasClass("page-break"))
                                temp_a4.append($$('<div class="page-break"></div>'))
                            temp_a4.append(new_element)
                            content_height = $$(new_element).outerHeight(true)
                        }
                    }
                }
            }
            load()
        });
    </script>
